<Window x:Class="курс.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:курс"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <ListBox HorizontalAlignment="Left" Height="284" Margin="166,111,0,0" VerticalAlignment="Top" Width="616">
            <DataTemplate>
               <StackPanel MouseDown="StackPanel_MouseDown" Height="100" Width="100">
                  <StackPanel Orientation="Vertical" Width="300">
                    <TextBlock FontWeight="Bold" Margin="10" FontSize="16">
                               
                                    <Run Text="{Binding Data_prin_zak}"/></TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="10">Состав: 
                            </TextBlock>
                </StackPanel>
                
              </StackPanel>
            </DataTemplate>
        </ListBox>

    </Grid>
</Window>
